# Certificate Management Test Configuration
# Copy this file to .env and fill in your values
# Then run: source .env && ./cert_test.sh

# ========================================
# REQUIRED CONFIGURATION
# ========================================

# Resource Provider URI
export RP_URI="your-rp-uri-here"

# Alias for the environment
export ALIAS="your-alias-here"

# Azure region (e.g., westus2, eastus, etc.)
export REGION="your-region-here"

# Azure Tenant ID
export TENANT_ID="your-tenant-id-here"

# ADR Namespace Resource ID
export ADR_NAMESPACE_RESOURCE_ID="your-adr-namespace-resource-id-here"

# User Assigned Managed Identity Resource ID
export UAMI_RESOURCE_ID="your-uami-resource-id-here"

# IoT Hub name 
export HUB_NAME="your-hub-name-here"

# Device name
export DEVICE_NAME="your-device-name-here"

# Certificate thumbprint for the intermediate CA certificate
export CERT_THUMBPRINT="your-cert-thumbprint-here after installing the intermediate certificate"

# Path to DhCmd.exe
export DHCMD_PATH="./DhCmd.exe"
